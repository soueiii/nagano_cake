<div class="container">
 <div class="row mt-5">
  <div class= "col-md-1"></div>
   <div class="col-md-11">
    <h2><span class="bg-secondary">新規会員登録</span></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "customers/shared/error_messages", resource: resource %>

      <div class="form_horizontal">
        <div class="form_group">
         <div class="col-sm-12 form-inline"><div class="col-md-5">名前</div>
         (姓)<%= f.text_field :first_name ,class: "form_control" %>
        （名）<%= f.text_field :last_name,class: "form_control"  %><br><br>
        </div>
       </div>
      </div>

      <div class="form_horizontal">
        <div class="form_group">
         <div class="col-sm-12 form-inline"><div class="col-md-5">フリガナ</div>
         (セイ)<%= f.text_field :first_name_kana ,class: "form_control" %>
        （メイ）<%= f.text_field :last_name_kana,class: "form_control"  %><br><br>
        </div>
       </div>
      </div>

      <div class="field">
        <div class="col-sm-12 form-inline"><div class="col-md-5">メールアドレス</div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %><br><br>
      </div>
      </div>

      <div class="field">
        <div class="col-sm-12 form-inline"><div class="col-md-5">郵便番号（ハイフンなし）</div>
        <%= f.text_field :postal_code %><br><br>
      </div>
      </div>

      <div class="field">
         <div class="col-sm-12 form-inline"><div class="col-md-5">住所</div>
        <%= f.text_field :address %><br><br>
      </div>
      </div>

      <div class="field">
        <div class="col-sm-12 form-inline"><div class="col-md-5">電話番号（ハイフンなし）</div>
        <%= f.text_field :telephone_number %><br><br>
      </div>
      </div>

      <div class="field">
        <div class="col-sm-12 form-inline"><div class="col-md-5">パスワード</div>
        <% if @minimum_password_length %>
        <em>(６文字以上)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %><br><br>
      </div>
      </div>

      <div class="field">
        <div class="col-sm-12 form-inline"><div class="col-md-5">パスワード（確認用）</div>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %><br><br><br>
      </div>
      </div>
      </div>
      </div>
    <div class="row">
       <div class="col-md-6"></div>
       <div class="col-md-6">
        <%= f.submit "新規登録", class:"btn btn-success" %><br><br><br>
            <span class="bg-secondary">すでに登録済みの方</span><br>
        <%= link_to 'こちら',new_customer_session_path %>からログインしてください。
       </div>
      </div>
     </div>
    <% end %>
  </div>
 </div>
</div>