<div class="container">
 <div class="row mt-5">
  <div class="col-md-3"></div>
  <div class="col-md-9">
   <h2><span class="bg-secondary"><%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集</span></h2>
  </div>
 </div>
 <div class="row mt-5">
  <div class="col-md-3"></div>
  <div class="col-md-9">
     <table class="mt-5">
      <tbody>
       <tr>
        <td>
         会員ID
        </td>
        <td></td> <td></td>
        <td>
         <%= @customer.id %>
        </td>
       </tr>
       <%= form_with model:@customer,url:edit_admin_customer_path, local:true do |f| %>
       <tr>
        <td>
         氏名
        </td>
         <td></td> <td></td>
        <td>
         <%= f.text_field :first_name %>
         
 <%= f.text_field :last_name %>
        </td>
       </tr>
       <tr>
        <td>
         フリガナ
        </td>
         <td></td> <td></td>
        <td>
          <%= f.text_field :first_name_kana %>
 <%= f.text_field :last_name_kana %>
        </td>
       </tr>
       <tr>
        <td>
        郵便番号
        </td>
         <td></td> <td></td>
        <td>
         <%= f.text_field :postal_code %>

        </td>
       </tr>
       <tr>
        <td>
         住所
        </td>
         <td></td> <td></td>
        <td>
         <%= f.text_field :address %>
        </td>
       </tr>
       <tr>
        <td>
         電話番号
        </td>
         <td></td> <td></td>
        <td>
          <%= f.text_field :telephone_number %>
        </td>
       </tr>
       <tr>
        <td>
         メールアドレス
         </td>
           <td></td> <td></td>
        <td>
         <%= f.text_field :email %>
        </td>
       </tr>
       <tr>
        <td>
         会員ステータス
        </td>
         <td></td> <td></td>
           <td>
          <%= f.text_field :is_deleted %>
          </td>
         </tr>
        </tbody>
       </table><br><br>
      <%= f.submit "変更を保存", class:"btn btn-success" %>
      <% end %>
      </div>
  </div>
</div>
