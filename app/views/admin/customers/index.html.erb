<div class="container">
  <div class="row mt-5">
   <div class="col-2"></div>
     <div class="col-10">
      <table class="table">
       <thead class="thead-light">
         <tr>
           <th scope="col">会員ID</th>
           <th scope="col">氏名</th>
           <th scope="col">メールアドレス</th>
           <th scope="col">ステータス</th>
         </tr>
       </thead>
       <% @customers. each do |customer| %>
       <tbody>
         <tr>
           <th scope="row"><%= customer.id %></th>
           <td><%= link_to admin_customer_path(customer) do %>
                <%= customer.first_name %>
                <%= customer.last_name %>
               <% end %>
           </td>
           <td><%= customer.email %></td>
           <td><%= customer.is_deleted %></td>
           <% end %>
         </tr>
       </tbody>
      </table>
     </div>
    </div>
  </div>

