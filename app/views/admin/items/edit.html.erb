<div class="container">
 <div class="row">
  <div class="col-md-3"></div>
  <div class="col-mr-9 mt-5">
   <h2><span class="bg-secondary">商品編集</span></h2><br>
 <%= form_with model:@item, url:edit_admin_item_path, local:true do |f| %>
  商品画像　　
   <%= f.attachment_field :image %><br><br>
  商品名　　　
   <%= f.text_field :name %><br><br>
  商品説明　　
   <%= f.text_area :introduction %><br><br>
  ジャンル　　
    <%= collection_select(:genre, :name, @genres, :id, :name) %><br><br>
  税抜価格　　
   <%= f.text_field :price %>円<br><br>
   <%= f.submit '変更を保存', class:"btn btn-success" %>

<% end %>
  </div>
  </div>
 </div>

