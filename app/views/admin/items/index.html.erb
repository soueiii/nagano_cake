       <th scope="col">税込価格</th>
       <th scope="col">ジャンル</th>
      </tr>
     </thead>
     <tbody>
      <% @items.each do |item| %>
      <tr>
       <th scope="col"><%= item.id %></th>
       <th scope="col">
        <%= link_to admin_item_path(item) do %>
         <%= item.name %></th>
        <% end %>
       <th scope="col"><%= item.price %></th>
       <th scope="col"><%= item.genre %></th>
      </tr>
      <% end %>
     </tbody>
    </table>
   </div>
  </div>
 </div>



