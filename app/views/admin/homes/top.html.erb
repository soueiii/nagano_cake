<div class="container">
  <div class="row mt-5">
   <h2>注文履歴一覧</h2>
   <div class="col-2"></div>
     <div class="col-10">
      <table class="table">
       <thead class="thead-light">
         <tr>
           <th scope="col">購入日時</th>
           <th scope="col">購入者</th>
           <th scope="col">注文個数</th>
         </tr>
       </thead>
       <% @orders. each do |order| %>
       <tbody>
         <tr>
           <td>
            <%= link_to admin_order_path(order) do %>
             <%= order.created_at %>
            <% end %>
           </td>
           <td>
             <%= order.name %>
           </td>
           <td>
           <p>
             <%= order.order_details.sum(:amount) %>
           </p>
           </td>
           <% end %>
         </tr>
       </tbody>
      </table>
     </div>
    </div>
  </div>

