<div class="container">
 <div class="row">
  <div class="col-md-3"></div>
  <div class="col-mr-9 mt-5">
   <h2><span class="bg-secondary">ジャンル一覧・追加</span></h2><br>
    <%= form_with model:@genre, url:admin_genres_path, local:true do |f| %>
     ジャンル名
     <%= f.text_field :name %>
     <%= f.submit '新規登録',class:"btn btn-success" %>
    <% end %>
    <br><br>
    
      <table class="table">
       <thead class="thead-light">
        <tr>
         <th scope="col">ジャンル</th><th></th>
        </tr>
       </thead>
       <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td>
           <%= genre.name %>
          </td>
          <td>
           <%= link_to "編集",edit_admin_genre_path(genre.id) ,class:"btn btn-success" %><br><br>
          </td>
        </tr>
        </tbody>
     <% end %>
    </table>
   </div>
 </div>
</div>