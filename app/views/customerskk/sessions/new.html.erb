<div class="container">
 <div class="row mt-5">
  <div class= "col-md-4">
   <h2><span class="bg-secondary">ログイン</span></h2>
      <h4><span class="bg-secondary">会員の方はこちらからログイン</span></h4><br>
      <div class="row">
      <div class= "col-md-9 mt-5">
      <%= form_with model:@cusotomer, url: session_path(resource_name) do |f| %>
        <div class="field">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",size: 40 %>
        </div>
        <div class="field mt-3">
          <%= f.label :パスワード %>
          <%= f.password_field :password, autocomplete: "current-password", size: 40 %>
        </div>
        </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="row">
       <div class="col-md-3"></div>
      <div class="col-md-9">
    <div class="actions mt-5">
      <%= f.submit "ログイン" , class:"btn btn-primary" %><br><br><br>
      <span class="bg-secondary">会員登録がお済みでない方</span><br>
      <%= link_to 'こちら',new_customer_registration_path %>から新規登録をください。
    </div>
    <% end %>
    </div>
    </div>

