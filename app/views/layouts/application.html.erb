<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if admin_signed_in? %>
     <div class="container">
       <div class="row mt-5 pb-5 border-bottom border-dark">
         <div class="col-md-4">
          <div class="logo">
           <h1>
             <p>
              &nbsp;&nbsp;NaganoCake
             </p>
           </h1>
          </div>
         </div>
         <div class="col-md-1"></div>
         <div class="col-md-7">
          <%= link_to "商品一覧", admin_items_path,class: "btn btn-outline-dark" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <%= link_to "会員一覧", admin_customers_path,class: "btn btn-outline-dark" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <%= link_to "注文履歴一覧", admin_root_path,class: "btn btn-outline-dark" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <%= link_to "ジャンル一覧", admin_genres_path,class: "btn btn-outline-dark" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <%= link_to "ログアウト", destroy_admin_session_path, method: :delete,class: "btn btn-outline-dark" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
         </div>
       </div>
     </div>
     <% elsif customer_signed_in? %>
     <div class="container">
       <div class="row mt-5 pb-5 border-bottom border-dark">
         <div class="col-md-4">
          <div class="logo">
           <h1>
             <p>
              &nbsp;&nbsp;NaganoCake
             </p>
           </h1>
          </div>
         </div>
         <div class="col-md-3">
           <% if customer_signed_in? %>
           <%= current_customer.first_name %>
           <%= current_customer.last_name %>様がログイン中
          <% end %>
         </div>
         <div class="col-md-5">
     <%= link_to "マイページ", public_customer_path(current_customer.id),class: "btn btn-outline-dark" %>
     <%= link_to "商品一覧",public_items_path,class: "btn btn-outline-dark" %>
     <%= link_to "カート", public_cart_items_path,class: "btn btn-outline-dark" %>
     <%= link_to "ログアウト", destroy_customer_session_path, method: :delete,class: "btn btn-outline-dark" %>
     </div>
       </div>
     </div>
     <% else %>
     <div class="container">
       <div class="row mt-5 pb-5 border-bottom border-dark">
         <div class="col-md-4">
          <div class="logo">
           <h1>
             <p>
              &nbsp;&nbsp;NaganoCake
             </p>
           </h1>
          </div>
         </div>
         <div class="col-md-3">
          </div>
         <div class="col-md-5">
           <%= link_to "About" ,about_path,class: "btn btn-outline-dark" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
           <%= link_to "商品一覧" ,public_items_path,class: "btn btn-outline-dark" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
           <%= link_to "新規登録", new_customer_registration_path,class: "btn btn-outline-dark" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
           <%= link_to "ログイン", new_customer_session_path,class: "btn btn-outline-dark" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
         </div>
       </div>
     </div>
    <% end %>

    <%= flash[:error] %>　　<%= notice %>
    <%= yield %>
  </body>
</html>
