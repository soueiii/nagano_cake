<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if admin_signed_in? %>
     <%= link_to "商品一覧", admin_items_path %>
     <%= link_to "会員一覧", admin_customers_path %>
     <%= link_to "注文履歴一覧", admin_root_path%>
     <%= link_to "ジャンル一覧", admin_genres_path %>
     <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
     <% elsif customer_signed_in? %>
     <%= link_to "マイページ", public_customer_path(current_customer.id) %>
     <%= link_to "商品一覧",public_items_path %>
     <%= link_to "カート", public_cart_items_path %>
     <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
     <% else %>
     <%= link_to "About" ,about_path %>
     <%= link_to "商品一覧" ,public_items_path%>
     <%= link_to "新規登録", new_customer_registration_path %>
     <%= link_to "ログイン", customer_session_path%>
    <% end %>

    <% if customer_signed_in? %>
     <%= current_customer.first_name %>
     <%= current_customer.last_name %>様がログイン中
    <% end %>

　　
    <%= yield %>
  </body>
</html>
