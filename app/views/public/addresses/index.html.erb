<h2>配送先登録/一覧</h2>

 <%= form_with model:@address, url:public_addresses_path, local:true do |f| %>
  郵便番号（ハイフンなし）
   <%= f.text_field :postal_code %>
  住所
   <%= f.text_field :address %>
  宛名
   <%= f.text_field :name %>
   <%= f.submit '新規登録' %>
 <% end %>

<% @addresses.each do |address| %>
 郵便番号
  <%= address.postal_code %>
 住所
  <%= address.address %>
 宛名
  <%= address.name %>

  <%= link_to '編集する', edit_public_address_path(address.id) %>
  <%= link_to '削除する', public_address_path(address.id), method: :delete %>
<% end %>