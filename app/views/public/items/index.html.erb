<div class="container">
 <div class="row mt-5">
    <div class="col-md-2">

     <table border="1" width="170" >
      <tr align="center">
       <th>ジャンル検索</th>
      </tr>
       <% @genres.each do |genre| %>
       <tr class="table table-borderless">
        <td>
         <%= genre.name %>
        </td>
       </tr>
       <% end %>
      </table>
    </div>
    <div class="col-md-10">
    <h2>商品一覧</h2><br>
      <ul>
       <% @items.each do |item| %>
        <li>
         <%= link_to attachment_image_tag item, :image, size: '150x150' %><br>
         <%= link_to item.name,public_item_path(item.id) %><br>
         ¥<%= item.price %><br><br>
        </li>
       <% end %>
      </ul>
     </div>
    </div>
   </div>
  </div>
 </div>