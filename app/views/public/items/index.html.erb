<div class="container">
 <div class="row mt-5">
    <div class="col-md-2">

     <table border="1" width="170" >
      <tr align="center">
       <th>ジャンル検索</th>
      </tr>
       <% @genres.each do |genre| %>
       <tr class="table table-borderless">
        <td>
         <%= genre.name %>
        </td>
       </tr>
       <% end %>
      </table>
    </div>
    <div class="col-md-10">
    <h2>商品一覧</h2><br>
      <ul>
       <% @items.each do |item| %>
        <li>
         <div class="item">
          <%=  link_to public_item_path(item.id) do %>
           <%= attachment_image_tag item, :image %><br>
         </div>
          <%= item.name %><br>
          <% end %>
         <%= item.price %>
        </li>
       <% end %>
      </ul>
     </div>
    </div>
   </div>
 </div>
 </div>