<h4>ジャンル検索</h4>
 <% @genres.each do |genre| %>
  <%= genre.name %>
 <% end %>

<h2>商品一覧</h2>(全件)
 <% @items.each do |item| %>
  <%= link_to attachment_image_tag item, :image, :fill, 100, 100,public_item_path(item.id) %>
  <%= link_to item.name,public_item_path(item.id) %>
  <%= item.price %>
 <% end %>
 